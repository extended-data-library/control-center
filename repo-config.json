{
  "$schema": "./schemas/repo-config.schema.json",
  "version": "1.0.0",
  "description": "Extended Data Library repository configuration",
  "defaults": {
    "merge_settings": {
      "allow_squash_merge": true,
      "allow_merge_commit": false,
      "allow_rebase_merge": false,
      "delete_branch_on_merge": true
    },
    "features": {
      "has_issues": true,
      "has_projects": true,
      "has_wiki": false
    },
    "security": {
      "vulnerability_alerts": true
    }
  },
  "ecosystems": {
    "python": {
      "organization": "extended-data-library",
      "files": {
        "always": ["always-sync"],
        "initial": ["initial-only"]
      },
      "repos": [
        "core",
        "vendor-connectors",
        "logging"
      ]
    },
    "nodejs": {
      "organization": "extended-data-library",
      "files": {
        "always": ["always-sync"],
        "initial": ["initial-only"]
      },
      "repos": [
        "inputs"
      ]
    },
    "docs": {
      "organization": "extended-data-library",
      "files": {
        "always": ["always-sync"],
        "initial": ["initial-only"]
      },
      "repos": [
        "extended-data-library.github.io"
      ]
    },
    "control": {
      "organization": "extended-data-library",
      "repos": [
        "control-center",
        ".github"
      ]
    }
  },
  "repository_descriptions": {
    "core": "Extended Data Types",
    "vendor-connectors": "Enterprise connector library",
    "logging": "LifecycleLogging library",
    "inputs": "Dynamic configuration loading",
    "extended-data-library.github.io": "Organization documentation"
  }
}
